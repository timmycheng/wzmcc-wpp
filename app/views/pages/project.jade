extends ../layout
block content
    .container
        .row
            form.form-horizontal(method="post", action="/user/project", enctype="multipart/form-data")
                if project._id
                    input(type="hidden", name="project[_id]", value=project._id)
                if user
                    input(type="hidden", name="project[responser]", value=user._id)
                .form-group
                    label.col-sm-2.control-label(for="inputName") 项目名字
                    .col-sm-10
                        input#inputName.form-control(type="text",name="project[name]",value=project.name)
                .form-group
                    label.col-sm-2.control-label(for="inputDescription") 项目说明
                    .col-sm-10
                        input#inputDescription.form-control(type="text",name="project[description]",value=project.description)
                .form-group
                    .col-sm-offset-2.col-sm-10
                    button.btn.btn-default(type="submit") 录入
                hr
