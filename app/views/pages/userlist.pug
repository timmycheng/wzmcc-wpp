extends ../layout
block content
	.container
		.row
			table.table.table-hover.table-bordered
				thead
					tr
						th 名字
						th 昵称
						th 权限
						th 时间
						th 删除
				tbody
					each item in users 
						tr(class=`item-id-${item._id}`)
							td #{item.username}
							td #{item.nickname}
							if item.role >= 50
								td 管理员
							else
								td 普通用户
							td #{moment(item.meta.updateAt).format('YYYY/MM/DD')}
							td
								button.btn.btn-danger.del(type="button",data-id=item._id) 删除	
	script(src="/js/user.js")