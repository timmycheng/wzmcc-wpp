extends ../layout
block content
    .container
        //- #calendar
        table#indexTable.table.table-hover.table-bordered
            thead
                tr
                    th 编号
                    th 状态
                    th 描述
                    th 截止
                    th 内容
                    th 责任人
                    //- th 查看
                    //- th 操作
                tbody
                    each item in projects
                        //- 未完成
                        if (item.status === 0)
                            tr(class='item-id-#{item._id}')
                                td #{item.pid}
                                if moment(item.start).format('ww') === moment(Date.now()).format('ww')
                                    td.text-muted open
                                else if moment(item.deadline).format('ww') < moment(Date.now()).format('ww')
                                    td.text-danger pending
                                else
                                    td.text-primary going 
                                td #{item.name}
                                td #{moment(item.deadline).format('YYYY/MM/DD')}
                                td #{item.description}
                                td #{item.responser.nickname}
                        else
                            tr(class='item-id-#{item._id} success')
                                td #{item.pid}
                                td close
                                td #{item.name}
                                td #{moment(item.deadline).format('YYYY/MM/DD')}
                                td #{item.description}
                                td #{item.responser.nickname}
