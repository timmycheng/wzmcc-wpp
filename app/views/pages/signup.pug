extends ../layout

block content
	.container
		.row
			.col-md-5
				form#signup(method="POST",action="/user/signup")
					.modal-body
						.form-group
							label(for="signupUserame") 用户名
							input#signupUserame.form-control(name="user[username]",type="text")
						.form-group
							label(for="signupNickname") 昵称
							input#signupNickname.form-control(name="user[nickname]",type="text")
						.form-group
							label(for="signupPassword") 密码
							input#signupPassword.form-control(name="user[password]",type="password")
					.modal-footer
						button.btn.btn-default(type="button",data-dismiss="modal") 关闭
						button.btn.btn-success(type="submit") 提交
	script(src="js/signinup.js")